<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context="com.example.lenovo.trackingeye2.Login">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/logo"
            android:layout_gravity="center"
            android:layout_width="175dp"
            android:layout_height="150dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="14dp"
            app:srcCompat="@drawable/logo1" />

        <TextView
            android:id="@+id/TextView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Selamat Datang, Silahkan Masuk"
            android:textColor="#fff"
            android:textSize="16dip"
            android:layout_above="@+id/txt_username"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="34dp"
            />

        <EditText
            android:id="@+id/txt_username"
            android:layout_width="290dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:hint="name@email.com"
            android:drawableLeft="@drawable/ic_action_email"
            android:background="#11000000"
            android:inputType="textEmailAddress"
            android:layout_marginBottom="11dp"
            android:layout_above="@+id/txt_password"
            android:layout_centerHorizontal="true" />

        <EditText
            android:id="@+id/txt_password"
            android:layout_width="290dp"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/txt_username"
            android:layout_alignStart="@+id/txt_username"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:background="#11000000"
            android:drawableLeft="@drawable/ic_action_lock"
            android:hint="password"
            android:password="true"
            android:textColor="#fff" />
        <Button
            android:id="@+id/btn_login"
            android:layout_width="100dp"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:layout_marginTop="35dp"
            android:text="Masuk"
            android:textColor="#fff"
            android:background="@drawable/btn_radius"
            android:layout_below="@+id/txt_password"
            android:layout_centerHorizontal="true" />
        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="320dp"
            android:layout_height="50dp"
            android:layout_below="@+id/btn_login"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="28dp"
            app:srcCompat="@drawable/or"

            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Silahkan Mendaftar Jika Belum Mempunyai Akun"
            android:textColor="#fff"
            android:layout_marginTop="21dp"
            android:layout_below="@+id/imageView3"
            android:layout_centerHorizontal="true"

            android:layout_gravity="center"/>

        <Button
            android:id="@+id/btn_registered"
            android:layout_width="60dp"
            android:layout_height="20dp"
            android:layout_below="@+id/textView2"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:text="Daftar"
            android:background="#0000"
            android:textColor="#ff0"
            />




    </LinearLayout>



</ScrollView>
